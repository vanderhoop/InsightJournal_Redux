<%= form_for(:entry, :url => { :action => "create", :id => @entries } ) do |f| %>
  <%= f.text_area :text %>
  <div class="pull-right">
    <%= f.label :user_mood_input, "Mood at time of writing: " %>
    <%= f.select :user_mood_input, [["Select a Mood Score", nil],["1 - Downright Lousy",1], ["2",2], ["3",3],["4", 4], ["5 - About Average", 5],["6", 6], ["7", 7], ["8", 8], ["9", 9], ["10 - Outstanding", 10]] %>
    <%= f.submit "Create Entry", id:'create-entry', :class => "square-button green" %>
  </div>
<% end %>


