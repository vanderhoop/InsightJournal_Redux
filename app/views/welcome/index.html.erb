      <ul>
        <% for i in 0..(@entries.length-1) %>
          <li><%= link_to @entries[i][:text].truncate(65, :separator => ' '), url_for([@user, @entries[i]]) %></li>
        <% end %>
      </ul>
      <h4><%= link_to "Write It Out!", url %></h4>
      <%= link_to "Archive", "/users/#{current_user.id}/entries" %>

  <% end %>

